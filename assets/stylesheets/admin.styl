@import 'includes/definitions'

/////////////////////////////////////////////////////////////////////////////////////////////////////////////// Generics

a:link
a:visited
  text-decoration none

input:focus
textarea:focus
a:link:focus
a:visited:focus
  outline none

.scroll::-webkit-scrollbar
  width 8px
  border 1px solid #FFF

.scroll::-webkit-scrollbar-thumb
  border 1px solid #FFF
  border-radius 4px
  background #DDD
  box-shadow 0 0 2px rgba(0, 0, 0, 0.5) inset

body
  background #FFF
  margin 0
  font 14px 'Didact Gothic', sans-serif
  line-height normal
  color color-normal
  overflow hidden
  display box
  width 100%

.title
  background #EEE
  border-bottom 1px solid #DEDFDF
  padding 5px 5px
  span
    display inline-block
    color color-darker
    font-size 20px
    font-weight bold
  .btn-separator
    float right
    display inline-block
    width 1px
    height 24px
    margin-left 5px
    background-color #DEDFDF
  button
    float right
    background #FDFDFD
    box-shadow 0 0 8px rgba(0, 0, 0, 0.08) inset
    border 1px solid #DDD
    border-radius 5px
    margin-left 5px
    font 12px/16px 'Didact Gothic', sans-serif
    padding-top 1px
    padding-bottom 3px
    color color-normal
    cursor pointer
    &:hover
      color color-darker
      border-color #CCC
      background #EAEAEA
    &:active
      background #DDD
      text-shadow 0 0 2px rgba(0, 0, 0, 0.15)
      box-shadow 0 0 8px rgba(0, 0, 0, 0.15) inset
      color #FFF
    &:disabled
      background #FAFAFA
      text-shadow none
      box-shadow none
      border-color #EEE
      color #DDD
      cursor auto

.picture-border
  display inline-block
  padding 2px
  border 1px solid #DEDFDF
  border-radius 2px
  margin 4px
  &:hover
    border 1px solid #CCC
  .picture-content
    display inline-block
    height 100px
    text-align center
    line-height 100px
    font-weight bold
    color rgba(255, 255, 255, 0.5)
    text-shadow 0 0 8px rgba(0, 0, 0, 0.7)
    cursor default
    &:hover
      color rgba(255, 255, 255, 0.75)
      text-shadow 0 0 15px rgba(0, 0, 0, 0.95)

///////////////////////////////////////////////////////////////////////////////////// Left Area (Project List & Gallery)

#left
  width 248px
  border-right 1px solid #DEDFDF
  display box
  box-orient vertical

#project-list
  box-flex 1
  display box
  box-orient vertical
  .items
    box-flex 1
    overflow-x hidden
    overflow-y auto
    a:link
    a:visited
      width 238px // needed for Firefox
      display block
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      color color-normal
      height 22px
      line-height 22px
      padding 0 5px
    a:hover
      text-decoration none
      background #FAFAFA
      color color-darker
    a:active
      background #DDD
      text-shadow 0 0 6px #999
      color #FFF
    a.current
      background #EEE

#gallery
  border-top 1px solid #DEDFDF
  display box
  box-orient vertical
  .content
    box-flex 1
    text-align center
    .picture-content
      display inline-block
      width 220px
      text-align center
      font-size 2em

///////////////////////////////////////////////////////////////////////////////////////////////////////// Project Editor

#project-editor
  box-flex 1
  display box
  box-orient vertical
  .btn-pictures
    width 106px
    margin-right 14px
  .items
    box-flex 1
    display box
    .en
    .ro
      box-flex 1
      border-right 1px solid #F6F6F6
      display box
      box-orient vertical
    .en
      border-right 1px dotted #DEDFDF
    .ro
      border-right 1px solid #DEDFDF
    .pictures
      width 130px
      display box
      box-orient vertical
      .cover-picture
        border-bottom 1px solid #DEDFDF
        .picture-content
          width 100px
          font-size 2em
      .content-pictures
        box-flex 1
        overflow auto
        .picture-border
          margin-bottom 0
          .picture-content
            width 100px
            font-size 50px

//////////////////////////////////////////////////////////////////////////////////////////// Project Editor : Text Items

#title-en
#title-ro
#description-en
#description-ro
  display block
  box-sizing border-box
  font 14px 'Didact Gothic', sans-serif
  line-height 166%
  background transparent
  width 100%
  padding 0 5px
  border 0
  margin 0
  &.error
    box-shadow 0 0 8px rgba(255, 0, 0, 0.15) inset


#title-en
#title-ro
  border-bottom 1px dotted #DEDFDF
  color color-darker
  height 30px
#description-en
#description-ro
  box-flex 1
  color color-lighter
  width 100%
  resize none

//////////////////////////////////////////////////////////////////////////////////////////////////////////// Message Box

#message-box
  position absolute
  top 380px
  left -9999px
  border 1px solid #CCC
  border-radius 6px
  padding 2px
  box-shadow 0 0 60px rgba(0, 0, 0, 0.20)
  .inner
    background-color #FFF
    box-shadow 0 0 20px rgba(0, 0, 0, 0.08) inset
    background-position 50% 16px
    background-repeat no-repeat
    border 1px solid #DEDFDF
    border-radius 4px
    padding 80px 20px 16px
    min-width 200px
    text-align center
    font-size 24px
  &.start
    background #FAFAFA
    .inner
      background-image url('/images/preloader.gif')
  &.success
    background #D3F9DB
    .inner
      background-image url('/images/success.png')
  &.error
    background #FADDDD
    .inner
      background-image url('/images/error-api.png')
