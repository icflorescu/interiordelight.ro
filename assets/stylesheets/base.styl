/////////////////////////////////////////////////////////////////////////////// Didact Gothic Font from Google Web Fonts

@import url('http://fonts.googleapis.com/css?family=Didact+Gothic&subset=latin-ext,latin')

//////////////////////////////////////////////////////////////////////////////////////////////////////////////// Imports

@import 'includes/definitions'
@import 'includes/reset'

/////////////////////////////////////////////////////////////////////////////////////////////////////////////// Generics

body
  background transparent url('/images/body.png')
  margin 0
  font 0.875em 'Didact Gothic', sans-serif
  line-height normal
  color color-normal

article
  margin 20px

h2
  font-weight normal
  font-size 171.43%
  margin 0.5em 0 -0.5em
  a:link
  a:visited
    color color-normal
  a:hover
    color color-3
    text-decoration none

h3
  font-weight normal
  font-size 142.86%
  margin 0.5em 0

p
  margin 0 0 0.75em
  line-height normal

strong
em
  color color-darker

a:link
a:visited
  text-decoration none
  color color-3
a:hover
  text-decoration underline

/////////////////////////////////////// Remove annoying link outlines in Firefox
a
  outline none
  -moz-outline-style none

.wrap-960
  width 960px
  margin 0 auto

.clear::after
  content '.'
  display block
  height 0
  clear both
  visibility hidden

.box
  background-color #FFF
  border 1px solid #DEDFDF
  border-radius 5px
  box-shadow 0 0 6px #E6E6E6 inset
  margin 26px 0 4px

.separator
  height 12px
  margin 0 20px
  background #FFF url('/images/separator.png')
  clear both

///////////////////////////////////////////////////////////////////////////////////////////////////////////////// Header

header#header
  background-color #FFF
  border-bottom 1px solid #DEDFDF
  box-shadow 0 0 6px #E6E6E6 inset

a#logo
  display inline-block
  float left
  width 460px
  height 90px
  margin 5px 0
  background #FFF url('/images/logo.png')

nav#header-nav
  float right
  margin-top 24px

  ul
    list-style none

    li
      float left
      padding 0 15px
      border-right 1px dotted #DEDFDF
      &:first-child
        padding-left 0

      a:link
      a:visited
        font-size 171.43%
        color #666
      a:hover
        text-decoration none
        color color-3
        text-shadow 0 0 12px #CCC

      span
        display block
        &.main
          line-height 32px
        &.sub
          margin-left 1px
          font-size 50%
          color color-lighter

    li.lang
      border-right-width 0
      padding-right 0
      text-align center

      span.main
        display inline-block
        background #FFF url('/images/flags.png') no-repeat
        width 32px
        &.en
          background-position 0 0
        &.ro
          background-position 0 -32px
      span.sub
        margin-left 0

//////////////////////////////////////////////////////////////////////////////////////////// Google +1 and Facebook Like

#spread-the-word
  position fixed
  z-index 1000
  top 0
  right -70px
  width 58px
  background-color #FFF
  border 1px solid #DEDFDF
  border-right-width 0
  border-radius 5px 0 0 5px
  box-shadow 0 0 6px rgba(0, 0, 0, 0.08)
  padding 0 5px 5px
  .content
    width 60px
    text-align center
  .fb-like
    margin-left 4px
  a.collapse
  a.expand
    font-size 85.72%
    &:link
    &:visited
      color color-normal
    &:hover
      border-top-color #BBB
      color color-3
      text-decoration none

  a.expand
    transform rotate(90deg)
    display none
    margin-top 55px
    margin-left -47px
    margin-bottom 40px
    width 100px
    background transparent url('/images/arrows-down.png') no-repeat 0 7px
    padding-left 12px

  a.collapse
    display block
    margin 2px 0
    padding-left 12px
    background #FFF url('/images/arrows-right.png') no-repeat 0 5px

  .separator
    height 1px
    margin 0 0 4px

//////////////////////////////////////////////////////////////////////////////////////////////////////////////// Clients

article#clients
  margin 5px 20px

  .links
    float right
    margin-bottom 5px

    a
      display inline-block
      background #FFF
      margin-left 10px
      padding 2px
      border 1px solid #DEDFDF
      border-radius 2px
      &:hover
        border-color #BBB
        box-shadow 0 0 12px #DDD
      img
        display block


////////////////////////////////////////////////////////////////////////////////////////////////////////////// Web Links

article#web-links

  h3
    margin-bottom 0

  a
    float right
    width 124px
    height 64px
    margin -10px 0 0 40px
    padding-left 76px
    text-decoration none
    color color-darker
    background #FFF url('/images/icons.png') no-repeat
    &:hover
      color color-3
      text-shadow 0 0 12px #CCC
    &.facebook
      background-position 0 0
    &.linkedin
      background-position 0 -64px
    &.google
      background-position 0 -128px

    span
      display block
      &.info
        margin-top 10px
        color color-normal
      &.title
        font-size 142.86%

///////////////////////////////////////////////////////////////////////////////////////////////////////////////// Footer

footer#footer
  font-size 85.72%
  margin-bottom 30px
  text-align center

  a:link
  a:visited
    color color-normal
  a:hover
    color color-3


span#footer-copyright
  float left
  margin-left 3px

nav#footer-nav
  float right
  margin-right 3px

  ul
    list-style none
    margin-top 0

    li
      float left
      padding-left 10px
      border-left 1px solid color-normal
      margin-left 10px
      &:first-child
        border-left none

      a.top
        background transparent url('/images/arrows-top.png') no-repeat 100% 5px
        padding-right 10px
